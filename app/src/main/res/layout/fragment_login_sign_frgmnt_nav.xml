<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.LoginSignFrgmntNav">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="12"
        android:background="@drawable/background"
        android:id="@+id/loginSignup_page">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="106dp"
                android:layout_height="106dp"
                android:src="@drawable/icono_alkemy"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_jua_wallet"
                android:text="@string/apptitle"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginTop="15dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slogan"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/font_jua_wallet"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="3">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCrearCuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:textSize="18sp"
                android:fontFamily="@font/font_jua_wallet"
                android:text="Crear cuenta nueva"
                android:textColor="@color/white"
                android:background="@drawable/big_button"
                android:textAllCaps="false"/>

            <TextView
                android:id="@+id/linkCrearCuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ya_tienes_cuenta"
                android:fontFamily="@font/font_jua_wallet"
                android:textColor="@color/primary_dark"
                android:textSize="20sp"/>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>